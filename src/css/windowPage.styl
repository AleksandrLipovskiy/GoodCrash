.window-page-window,
.window-error-window
  position: absolute
  width: 60%
  height: -webkit-calc(100% - 120px)
  height: calc(100% - 120px)
  font-size: 0.825rem
  color: $white
  background: $black-dark
  border: 2px solid $black
  box-shadow(0, 1px, 3px, $black)
  z-index: 6000

.window-page-window
  &.my-games
    top: 40px
    left: 15%
  &.about-me
    top: 70px
    left: 20%
  &.full-screen
    top: 31px
    left: 1px
    width: -webkit-calc(100% - 2px)
    width: calc(100% - 2px)
    height: -webkit-calc(100% - 32px)
    height: calc(100% - 32px)
    .window-title
      &:active
        cursor: default
  &.not-active
    z-index: 5000
  &.closed-window
    display: none
    z-index: 5000

.window-error-window
  top: 50%
  left: 50%
  transform(-50%, -50%, 0)

.window-page-title,
.window-error-title
  position: absolute
  top: 0
  left: 0
  width: 100%
  height: 30px
  padding: 5px 10px
  color: $white
  background: $black
  border: 1px solid $black-dark
  overflow: hidden
  &:active
    cursor: grabbing

.window-page-full-screen
  position: absolute
  top: 1px
  right: 40px
  width: 28px
  height: 28px
  background: $black
  cursor: pointer
  &:hover
    background: $black-dark
  &::before
    content: ""
    position: absolute
    top: 50%
    left: 50%
    width: 20px
    height: 20px
    border: 1px solid $white
    transform(-50%, -50%, 0)

.window-page-close,
.window-error-close
  position: absolute
  top: 0
  right: 0
  width: 28px
  height: 28px
  background: $crash
  border-top: 1px solid $black-dark
  border-right: 1px solid $black-dark
  cursor: pointer
  z-index: 5000
  animation-when-event($animation_time, $animation_time_delay)
  &::before, &::after
    content: "";
    position: absolute;
    top: 50%;
    left: 49%;
    width: 20px;
    height: 2px;
    background: $white
  &::before
    transform(-50%, -50%, -45deg)
  &::after
    transform(-50%, -50%, 45deg)
  &:hover
    background: $red

.window-page-window-body,
.window-error-window-body
  position: absolute
  top: 30px
  left: 0
  width: 100%
  height: -webkit-calc(100% - 30px)
  height: calc(100% - 30px)
  padding: 10px

.window-error-window-body
  display: grid
  grid-template-columns: 1fr
  justify-items: center
  align-items: center
  background: $black-dark;
  &::before,
  &::after
    display: block
    content: ""
    position: fixed
    top: 30px
    left: 0
    width: inherit
    height: inherit
  &::before
    opacity: .3
    bg-glitch-smoky(5px)
    animation-duration: 2s
    animation-name: lines-smoky
    animation-iteration-count: infinite
  &::after
    opacity: .3
    bg-glitch-red(5px)
    animation-duration: 1s
    animation-name: lines-red
    animation-iteration-count: infinite

@keyframes lines-smoky
  2%
    display: block
    transform(0, -2px, 0)
    bg-glitch-smoky(3px)
  5%
    display: none
  50%
    display: block
    transform(0, 4px, 0)
    bg-glitch-smoky(5px)
  70%
    display: none
  75%
    display: block
    transform(0, 1px, 0)
    bg-glitch-smoky(1px)

@keyframes lines-red
  12%
    display: block
    transform(0, -2px, 0)
    bg-glitch-red(3px)
  27%
    display: none
  50%
    display: block
    transform(0, 4px, 0)
    bg-glitch-red(5px)
  68%
    display: none
  77%
    display: block
    transform(0, 1px, 0)
    bg-glitch-red(1px)

@media only screen and (max-width: $mobile_middle)
  .window-page-window,
  .window-error-window
    width: -webkit-calc(100% - 40px)
    width: calc(100% - 40px)
    height: -webkit-calc(100% - 80px)
    height: calc(100% - 80px)
  .window-page-window
    &.my-games
      top: 40px
      left: 10px
    &.about-me
      top: 70px
      left: 30px
